<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="ACF Rules"
	Version="9,00"
	>
	<Rules>
		<CustomBuildRule
			Name="Arxc"
			DisplayName="ARX Compiler"
			CommandLine="../../../Acf\Bin\DebugVC9VC9\Arxc.exe &quot;&quot; -o &quot;\..\..\AuxInclude\Qt5\GeneratedFiles\\C.cpp&quot; [AllOptions] [AdditionalOptions]"
			Outputs="&quot;\..\..\AuxInclude\Qt5\GeneratedFiles\\C.cpp&quot;;&quot;\..\..\AuxInclude\Qt5\GeneratedFiles\\C.h&quot;"
			AdditionalDependencies="&quot;../../../Acf\Bin\DebugVC9VC9\Arxc.exe&quot;"
			FileExtensions="*.arx"
			ExecutionDescription="Compiling ACF Registry File..."
			>
			<Properties>
				<StringProperty
					Name="ConfigFile"
					DisplayName="Packages Configuration File"
					Category="Environment"
					Description="ACF Packages Configuration File"
					Switch="-config &quot;[value]&quot;"
					Delimited="true"
					Inheritable="true"
				/>
				<BooleanProperty
					Name="Verbose"
					DisplayName="Verbose"
					Category="Debug"
					Description="Enable verbose mode"
					Switch="-v"
				/>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="DeployCopy"
			DisplayName="Deploy copy files"
			CommandLine="copy /Y &quot;[$InputDir]\&quot; &quot;[$OutputDir]\&quot;"
			Outputs="&quot;[$OutputDir]\&quot;"
			AdditionalDependencies="&quot;[$InputDir]\&quot;"
			FileExtensions="*.copy"
			ExecutionDescription="Copying file "
			>
			<Properties>
				<StringProperty
					Name="OutputDir"
					DisplayName="Output Directory"
					Category="Environment"
					Description="Specify output directory"
					DefaultValue=""
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="InputDir"
					DisplayName="Input Directory"
					Category="Environment"
					Description="Optional input directory, if *.copy file should be used as dummy only"
					DefaultValue=""
					Delimited="true"
					Inheritable="true"
				/>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="FileConvertCopy"
			DisplayName="ACF file convertion copy"
			CommandLine="&quot;../../../Acf\Bin\DebugVC9VC9\Acf.exe&quot; &quot;[$RegistryFile]&quot; -config &quot;[$ConfigFile]&quot; -input &quot;&quot; -o [$OutputDir]/"
			Outputs="&quot;[$OutputDir]/&quot;"
			AdditionalDependencies="&quot;../../../Acf\Bin\DebugVC9VC9\Acf.exe&quot;;&quot;[$RegistryFile]&quot;;&quot;[$ConfigFile]&quot;"
			FileExtensions="*.xtracf"
			ExecutionDescription="Converting File With ACF transformation..."
			>
			<Properties>
				<StringProperty
					Name="RegistryFile"
					DisplayName="Application Registry File"
					Category="Environment"
					Description="ACF registry file with exported interface ibase::IApplication"
					DefaultValue="../../../Acf\Partitura\AcfVoce.arp\FileSubstitCopyApp.arx"
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="ConfigFile"
					DisplayName="Packages Configuration File"
					Category="Environment"
					Description="ACF packages configuration file"
					DefaultValue="../../../Acf\Config\AcfBaseOnly.xpc"
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="OutputDir"
					DisplayName="Output Directory"
					Category="Environment"
					Description="Specify output directory were transformed files will be placed"
					DefaultValue=""
					Delimited="true"
					Inheritable="true"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
